<div class="container">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Nomina</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Consulta de Empleados
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <button onclick="OpenModalNuevoEmpleado(this)" type="button" class="btn btn-primary">Nuevo Registro</button>
            <button onclick="OpenModalReingresoEmpleado(this)" type="button" class="btn btn-primary">Reingreso</button>
            <button onclick="cancelarFomularioFiltro(this)" type="button" class="btn btn-danger">Cancelar</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Filtros</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form onsubmit="FiltrarDatos(event)" id="frmFiltroEmpleados">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectCompaniaFiltro">Compañia</label>
                            <select class="form-control form-control-md" id="selectCompaniaFiltro" name="selectCompaniaFiltro">
                                <option selected value="" disabled> --Seleccione--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectLocalidadFiltro">Localidad</label>
                            <select class="form-control form-control-md" id="selectLocalidadFiltro" name="selectLocalidadFiltro">
                                <option selected value="" disabled> --Seleccione--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="selectEstatusFiltro">Estatus</label>
                            <select class="form-control form-control-md" id="selectEstatusFiltro" name="selectEstatusFiltro">
                                <option selected value="" disabled> --Seleccione--</option>
                                <option value="A"> Activo</option>
                                <option value="B"> Baja</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="txtNombreEmpleadoFiltro">Nombre Empleado</label>
                            <input type="text" class="form-control" id="txtNombreEmpleadoFiltro" placeholder="Nombre" name="txtNombreEmpleadoFiltro" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="txtNoEmpleadoFiltro">No. Empleado</label>
                            <input type="text" class="form-control" id="txtNoEmpleadoFiltro" placeholder="No. Empleado" name="txtNoEmpleadoFiltro" />
                        </div>
                    </div>
                </div>
                <div class="form-group text ">
                    <button class="btn btn-info btn-outline" type="submit">Filtrar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <table id="tblEmpleados" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>No. Empleado</th>
                        <th>Nombre</th>
                        <th>Estatus</th>
                        <th>Compañia</th>
                        <th>Localidad</th>
                        <th>Dirección</th>
                        <th>Departamento</th>
                        <th>Puesto</th>
                        <th>Centros de costos</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    @*Modal Plazas*@
    <div class="modal " id="mdlPlaza" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <h4 class="modal-title">Plaza</h4>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
                <div class="modal-body">
                    <form id="frmEmpleadoNuevo" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="selectPlazas">Plaza a Ocupar</label>
                                    <select class="form-control form-control-md" id="selectPlazas" name="selectPlazas">
                                        <option selected disabled value="">--Selecciona--</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button onclick="validaPlazaDisponible()" type="button" class="btn btn-warning" id="btnCancelarRegistro">Avanzar</button>
                    <button onclick="cancelarCrear()" id="btnGuardarRegistroNew" type="button" class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    @*modal reingreso*@
    <div class="modal " id="mdlReingreso" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <h4 class="modal-title">Reingreso de Empleado</h4>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
                <div class="modal-body">
                    <form id="frmMdlReingreso" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label for="txtCodEmpleadoReingresoMdl">Codigo Empleado a Reingresar</label>
                                    <input type="text" class="form-control" id="txtCodEmpleadoReingresoMdl" placeholder="Codigo Empleado" name="txtCodEmpleadoReingresoMdl" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button onclick="ValidarCodEmpleadoReingreso()" type="button" class="btn btn-warning" id="btnCancelarRegistro">Avanzar</button>
                    <button onclick="cancelarCrear()"  type="button" class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



    @*Modal editar*@
    <div class="modal " id="mdlEditEmpleado" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <h4 class="modal-title">Editar Empleado</h4>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="txtCodeEmpleadoEdit">Codigo Empleado</label>
                                <input type="text" class="form-control" id="txtCodeEmpleadoEdit" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="txtNameEmpleadoEdit">Apellido Paterno</label>
                                <input type="text" class="form-control" id="txtNameEmpleadoEdit" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal modal-success" id="mdlDetailEmpleado" role="dialog" aria-labelledby="myModalLabelxl">
        <div class="modal-dialog  modal-lg animated zoomIn animated-3x" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Detalle Empleado</h5>
                    <button onclick="cancelarCrear();" type="button" title="Cerrar" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="zmdi zmdi-close"></i></span></button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12 col-md-12" spellcheck="false">
                        <div class="row">
                            <div class="col-md-1">
                                <b style="font-size:small">Id</b> <p class="EstudioId animated fadeInUp" style="font-size:small; color: firebrick"> </p>
                            </div>
                            <div class="col-md-4">
                                <b style="font-size:small">Nombre Empleado <span class="DescripcionEstudio" aria-hidden="true"></span></b> <p class="ValueDescripcionEstudio animated fadeInUp" style="font-size:small; color: firebrick"> </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button onclick="validaTienePlaza()" type="button" class="btn btn-warning" id="btnCancelarRegistro">Avanzar</button>
                    <button onclick="cancelarCrear()" id="btnGuardarRegistroNew" type="button" class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
<script src="~/js/Empleados/Index.js"></script>
}
